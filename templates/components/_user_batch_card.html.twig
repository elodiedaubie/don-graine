{#display seed batches given by connected user and still available#}
<div class = "card w-100">
    <div class = "card-header bg-white border-0" >
      <div class="d-inline-flex gap-3">
        <i class="bi bi-hourglass fs-3"></i>
        <div>
          <h3 class="mb-2 mt-1">{{ available_batch.plant.name }}</h3>
          <p class="mb-0 fst-italic">Qualit√©: {{ available_batch.plant.purpose.name }}</p>
          <p class="mb-0">Lot de {{ available_batch.seedQuantity }} graines</p>
        </div>
      </div>
    </div>
    <div class = "card-body d-flex justify-content-around gap-1">
      <div>
        <i class="bi bi-x-circle"></i>
        <a href="{{ path('seed_batch_edit', {'id': available_batch.id}) }}">Modifier</a>
      </div>
      <div>
        <i class="bi bi-arrow-repeat text-danger"></i>
        <a href="{{ path('seed_batch_delete', {'id': available_batch.id}) }}" class="link-danger">Supprimer</a>
      </div>
    </div>
  </div>