{#display seed batches given by connected user and still available#}
<div class = "card w-100">
    <div class = "card-header bg-white border-0" >
      <div class="d-inline-flex gap-3">
        <i class="bi bi-hourglass fs-4"></i>
        <div>
          <h3 class="mb-2 mt-1">{{ availableBatch.plant.name }}</h3>
          <p class="mb-0 fw-bolder">Plante {{ availableBatch.quality.name }}</p>
          <p class="mb-0">Lot de {{ availableBatch.seedQuantity }} graines</p>
        </div>
      </div>
    </div>
    <div class = "card-body d-flex justify-content-around gap-1">
      <div>
        <i class="bi bi-x-circle"></i>
        <a href="{{ path('seed_batch_edit', {'id': availableBatch.id}) }}">Modifier</a>
      </div>
      <div>
        <i class="bi bi-arrow-repeat text-danger"></i>
        <a href="{{ path('seed_batch_delete', {'id': availableBatch.id}) }}" class="link-danger">Supprimer</a>
      </div>
    </div>
  </div>