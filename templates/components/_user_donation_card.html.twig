{#display donations made by connected user#}
<div class = "card w-100">
    <div class = "card-header d-inline-flex justify-content-between bg-white border-0" >
      <i class="bi bi-arrow-right"></i>
      <h3 class="mb-0 mt-1 w-50">{{ user_donation.seedBatch.plant.name }}</h3>
        {% if user_donation.status == "En cours" %}
          <p class="h3 text-danger">{{ user_donation.status }}</p>
        {% elseif user_donation.status == "Finalisé" %}
          <p class="h3 text-info">{{ user_donation.status }}</p>
        {% elseif donation.status == "Annulé" %}
          <p class="h3 text-primary">{{ user_donation.status }}</p>
        {% endif %}
    </div>
    <div class = "card-body ps-7">
          <p class="mb-0">Lot de {{ user_donation.seedBatch.seedQuantity }} graines</p>
          <p class="mb-0">Demandé par {{ user_donation.seedBatch.owner.userName }}</p>
          <p class="mb-0">Le {{ user_donation.createdAt|date("d/m/Y") }}</p>
    </div>
  </div>