{#display donations made by connected user#}
<a href="{{ path('user_account_donation', {id: donation.id}) }}" class="clickable-card">
  <div class = "card">
    <div class = "card-header d-inline-flex justify-content-between bg-white border-0" >
      <i class="bi bi-arrow-right fs-4"></i>
      <h3 class="mb-0 mt-1 w-50">{{ donation.seedBatch.plant.name }}</h3>
        {% if donation.status == "En cours" %}
          <p class="h3 text-danger">{{ donation.status }}</p>
        {% elseif donation.status == "Finalisé" %}
          <p class="h3 text-info">{{ donation.status }}</p>
        {% elseif donation.status == "Annulé" %}
          <p class="h3 text-primary">{{ donation.status }}</p>
        {% endif %}
    </div>
    <div class = "card-body ps-7">
          <p class="mb-0 fw-bolder">Plante {{ donation.seedBatch.plant.purpose.name }}</p>
          <p class="mb-0 fw-normal">Lot de {{ donation.seedBatch.seedQuantity }} graines</p>
          <p class="mb-0 fw-normal">Demandé par {{ donation.beneficiary.userName }}</p>
          <p class="mb-0 fw-normal">Le {{ donation.createdAt|date("d/m/Y") }}</p>
    </div>
  </div>
</a>