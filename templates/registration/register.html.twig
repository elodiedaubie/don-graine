{% extends 'base.form.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block bodyclass %}"register"{% endblock %}

{% block pictosource %}"{{ asset('build/images/pictos/picto-register.png') }}"{% endblock %}
{% block h1 %}Inscription{% endblock %}

{% block form %}
    {{ form_start(registrationForm) }}
        {{ form_label(registrationForm.userName) }}
        {{ form_widget(registrationForm.userName) }}
        {{ form_errors(registrationForm.userName) }}
        {{ form_label(registrationForm.email) }}
        {{ form_widget(registrationForm.email) }}
        {{ form_errors(registrationForm.email) }}
        {{ form_label(registrationForm.plainPassword) }}
        {{ form_widget(registrationForm.plainPassword) }}
        {{ form_errors(registrationForm.plainPassword) }}
        {{ form_widget(registrationForm.agreeTerms) }}
        {{ form_label(registrationForm.agreeTerms, 'J\'accepte les ' ~ ' <a href="#" target="_blank"> conditions d\'utilisation du site</a>') }}
        <div class="container d-flex justify-content-center">
            <button type="submit" class="btn btn-dark btn-lg">M'inscrire</button>
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}