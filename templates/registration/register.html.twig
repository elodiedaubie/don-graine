{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block bodyclass %}"register"{% endblock %}

{% block body %}

    <div class="container p-5 mt-5 mb-5 bg-white shadow">
        <h1>Inscription</h1>
        <p>A ce jour seul les Lyonnais.es peuvent profiter de la plateforme.</p>
        <div class="d-grid gap-2">
            {{ form_start(registrationForm) }}
                {{ form_label(registrationForm.userName) }}
                {{ form_widget(registrationForm.userName) }}
                {{ form_errors(registrationForm.userName) }}
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email) }}
                {{ form_errors(registrationForm.email) }}
                {{ form_label(registrationForm.plainPassword) }}
                {{ form_widget(registrationForm.plainPassword) }}
                {{ form_errors(registrationForm.plainPassword) }}
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms, 'J\'accepte les ' ~ ' <a href="#" target="_blank"> conditions d\'utilisation du site</a>') }}
                <div class="container d-flex justify-content-center">
                    <button type="submit" class="btn btn-dark btn-lg">M'inscrire</button>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
